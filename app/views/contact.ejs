                            <label class="form-control-label" for="message-input">Message</label>
                            <textarea type="text" name="message" class="form-control" id="message-input" placeholder="Your message" rows="2"></textarea>
                        </div>

                        <button type="submit" value="Send" class="btn btn-outline-success">Submit</button>

                    </form>

                </div>

            </div>

        </div>
    </section>
    
